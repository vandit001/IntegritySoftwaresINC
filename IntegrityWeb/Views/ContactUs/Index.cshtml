@{
    ViewBag.Title = "Contact Us";
    ViewBag.canonical = IntegrityWeb.Constant.SiteConfigration.webURL + "/contactus";
}

<main class="site-main">

    <!-- Page Banner -->
    <div class="page-banner">
        <!-- Container -->
        <div class="container">
            <h3>Contact <span>Us</span></h3>
        </div><!-- Container /- -->
    </div><!-- Page Banner /- -->
    <!-- Contact content -->
    <div class="sp-60 sb-60 contact-content">
        <!-- Container -->
