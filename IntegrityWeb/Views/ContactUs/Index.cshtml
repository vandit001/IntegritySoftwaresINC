@section scripts{
    <script>
        $(document).ready(function () {
            $("#btn_contactsubmit").unbind('click');
            $("#btn_contactsubmit").bind('click', function () {

                $("#loading").show();
                var name = $('#input_conname').val();
                var company = $('#input_concompany').val();
                var email = $('#input_conemail').val();
                var phone = $('#input_conphone').val();
                var comments = $('#textarea_message').val();
                var budget = $('#inputconBudget').val();
                var isValid = true;
                if (name == null || name == "") {
                    $('#input_conname').css('border', '1px solid red');
                    isValid = false;
                }
                else
                    $('#input_conname').css('border', '');

                if (email == null || email == "" || !validateEmail(email)) {
                    $('#input_conemail').css('border', '1px solid red');
                    isValid = false;
                }
                else
                    $('#input_conemail').css('border', '');

                if (phone == null || phone == "" || !$.isNumeric(phone)) {
                    $('#input_conphone').css('border', '1px solid red');
                    isValid = false;
                }
                else
                    $('#input_conphone').css('border', '');

                if (isValid) {
                    $.ajax({
                        type: "POST",
                        url: "/ContactUs/SendEmail",
                        contentType: "application/json; charset=utf-8",
                        data: '{ "name": "' + name + '", "company": "' + company + '", "email": "' + email + '", "phone": "' + phone + '", "budget": "' + budget + '", "comments": "' + comments + '" }',
                        dataType: "json",
                        success: function (data) {
                            //if (!alert(data)) {
                            //    window.location.reload();
                            //}
                            //else {
                            //    window.location.reload();
                            //}
                            window.location = '@Url.Action("index", "Thankyou")';
                        },
                        error: function () { $("#loading").hide();alert("Opps.. Something went wrong. Please Try again Later "); }
                    });
                } else {
                    $("#loading").hide();
                }
            });

            function validateEmail(email) {
  var emailReg = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;
  return emailReg.test(email);
}
        });
    </script>
}