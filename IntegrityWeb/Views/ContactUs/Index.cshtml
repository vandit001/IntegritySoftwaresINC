                                <option>Less than 10000 USD</option>
                                <option>10000USD - 20000 USD</option>
                                <option>20000 USD - 30000 USD</option>
                                <option>30000 USD - 40000 USD</option>
                                <option>40000 USD - 50000 USD</option>
                                <option>Greater than 50000 USD</option>
                            </select>
                        </div>
                        <div class="col-md-12 form-group">
                            <textarea class="form-control" placeholder="Message" maxlength="500" name="textarea-message" id="textarea_message"></textarea>
                        </div>
                        <div class="col-md-12">
                            <button id="btn_contactsubmit" name="submit" class="btn_default"><i class="fa fa-paper-plane"></i>Submit</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <div class="contact-detail">
